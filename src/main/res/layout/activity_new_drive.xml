<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.pires.obd.reader.activity.NewDrive"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Spinner
        android:id="@+id/vehicle"
        android:layout_width="316dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="71dp"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner
        android:id="@+id/driver"
        android:layout_width="317dp"
        android:layout_height="29dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="241dp"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="174dp"
        android:layout_height="54dp"
        android:text="@string/create_drive"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="312dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="21dp"
        android:text="Select a vehicle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="97dp"
        android:layout_height="23dp"
        android:text="Select a driver"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="218dp"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="144dp" />


    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="117dp"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="172dp"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="117dp"
        android:text="Power (hp)"
        app:layout_constraintLeft_toRightOf="@+id/brand"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/torque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="144dp"
        android:text="Torque (Nm)"
        app:layout_constraintLeft_toRightOf="@+id/model"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eng_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="172dp"
        android:text="Engine Size (L)"
        app:layout_constraintLeft_toRightOf="@+id/year"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
